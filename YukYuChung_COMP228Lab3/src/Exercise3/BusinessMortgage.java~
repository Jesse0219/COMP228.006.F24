package Exercise3;

public abstract class BusinessMortgage extends Mortgage {
    public double primeRate = 0.05;
    public double finalRate = 0.01 + primeRate;
    //Its constructor sets the interest rate to 1% over the current prime rate.
    public BusinessMortgage(int mortgageNumber, String customerName, double mortgageAmount, int mortgageTerm) {
        super(mortgageNumber, customerName, mortgageAmount,finalRate, mortgageTerm);
    }

    // Create a getMortgageInfo method to display all the mortgage data.

    public abstract void getMortgageInfo() {
    }

}
